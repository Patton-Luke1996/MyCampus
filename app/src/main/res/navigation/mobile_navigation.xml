<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.mycampus_application.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_myPosts"
        android:name="com.example.mycampus_application.ui.myPosts.MyPostsFragment"
        android:label="@string/myPostingsHeader"
        tools:layout="@layout/fragment_myposts" />

    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.mycampus_application.ui.search.SearchFragment"
        android:label="Search postings"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_nav_search_to_searchResults"
            app:destination="@id/nav_search_results" />
    </fragment>

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.mycampus_application.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragement_profile" />

    <fragment
        android:id="@+id/nav_discount"
        android:name="com.example.mycampus_application.ui.discounts.DiscountFragment"
        android:label="Student discounts"
        tools:layout="@layout/fragment_share" />

    <fragment
        android:id="@+id/nav_send"
        android:name="com.example.mycampus_application.ui.discounts.DiscountFragment"
        android:label="@string/menu_send"
        tools:layout="@layout/fragment_discount" />
    <fragment
        android:id="@+id/nav_search_results"
        android:name="com.example.mycampus_application.SearchResults"
        android:label="fragment_search_results"
        tools:layout="@layout/fragment_search_results" />
</navigation>